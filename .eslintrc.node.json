{
  "extends": "airbnb/base",
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "env": true,
    "sinon": true,
    "deepFreeze": true
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "no-use-before-define": 0,
    "comma-dangle": 0,
    "one-var": 0,
    "padded-blocks": 0,
    "strict": [
      2,
      "global"
    ],
    "indent": [
      2,
      4
    ]
  }
}